{% extends "base.jinja" %}

{% block script %}
    <script type="text/javascript" src="static/js/attachment.js"></script>
{% endblock %}

{% block title %}
    Attach
{% endblock %}

{% block content %}
    <legend><h3>
        Attach Message To Beacon
    </h3></legend>
    <br>
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
          <form class="form-horizontal" action="{{ url_for('portal.beacon_attachment_status') }}" method="post">


                <div class="form-group">
                    <label class="control-label col-xs-3" for="name">NameSpace:</label>
                    <div class="col-xs-7">
                        <input type="text" readonly class="form-control" name="namespace" value={{beacon}}>
                    </div>
                </div>



                <div class="form-group">
                    <label class="control-label col-xs-3" for="name">Beacon Name:</label>
                    <div class="col-xs-7">
                        <input type="text" readonly class="form-control" name="name" value={{ name }}>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-xs-3" for="name">Message:</label>
                    <div class="col-xs-7">
                        <textarea id="description" rows=5 cols=40 class="form-control" name="msg" placeholder="Enter Message to attach">{{ attachment }}</textarea>
                    </div>
                </div>

                <strong>Please enter the data in form of json (ex: {"location" : "kerb area"})</strong>
                <div class="form-group">
                    <div class="col-xs-offset-4 col-xs-8">
                        <input type="submit" class="btn btn-success" value="Submit">
                        <input type="reset" class="btn btn-danger" value="Reset">
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-4"></div></div>
    </div>
{% endblock %}
