{% extends "base.jinja" %}

{% block script %}
    <script type="text/javascript" src="static/js/editBeacon.js"></script>
{% endblock %}

{% block title %}
    Edit
{% endblock %}

{% block content %}
    <legend><h3>
        Edit Beacon
    </h3></legend>
    <br>
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
          <form class="form-horizontal" action="{{ url_for('portal.edit_beacon_status') }}" method="post">

                <div class="form-group">
                    <label class="control-label col-xs-3" for="name">Beacon Name:</label>
                    <div class="col-xs-7">
                        <input readonly type="text" class="form-control" name="name" value={{ beacon.beaconName }}>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-xs-3" for="name">Description:</label>
                    <div class="col-xs-7">
                        <input id="description" type="text" class="form-control" name="description" value={{ name }}>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-xs-offset-4 col-xs-8">
                        <input type="submit" class="btn btn-success" value="Submit">
                        <input type="reset" class="btn btn-danger" value="Reset">
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-4"></div></div>
    </div>
{% endblock %}